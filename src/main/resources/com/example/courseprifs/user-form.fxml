<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.courseprifs.fxControllers.UserForm">
   <children>
      <Pane layoutX="56.0" layoutY="32.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="468.0">
         <children>
            <RadioButton fx:id="userRadio" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" selected="true" text="User">
               <toggleGroup>
                  <ToggleGroup fx:id="Select" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="restaurantRadio" layoutX="96.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Restaurant" toggleGroup="$Select" />
            <RadioButton fx:id="clientRadio" layoutX="197.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Client" toggleGroup="$Select" />
            <RadioButton fx:id="driverRadio" layoutX="292.0" layoutY="18.0" mnemonicParsing="false" onAction="#disableFields" text="Driver" toggleGroup="$Select" />
            <TextField fx:id="usernameField" layoutX="20.0" layoutY="56.0" promptText="Username" />
            <PasswordField fx:id="passwordField" layoutX="208.0" layoutY="56.0" promptText="Password" />
            <TextField fx:id="nameField" layoutX="22.0" layoutY="96.0" promptText="Name" />
            <TextField fx:id="surnameField" layoutX="208.0" layoutY="96.0" promptText="Surname" />
            <TextField fx:id="phoneField" layoutX="22.0" layoutY="137.0" promptText="Phone number" />
            <TextField fx:id="addressField" layoutX="208.0" layoutY="137.0" promptText="Address" />
         </children>
      </Pane>
      <Button layoutX="208.0" layoutY="301.0" mnemonicParsing="false" onAction="#createNewUser" text="Save" />
      <Button fx:id="updateButton" layoutX="274.0" layoutY="301.0" mnemonicParsing="false" onAction="#updateUser" text="Update" />
      <ComboBox fx:id="comboTest" layoutX="72.0" layoutY="243.0" prefWidth="150.0" />
   </children>
</AnchorPane>
